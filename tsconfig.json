{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@SC/*": ["./src/*"],
      "@SC/pages/*": ["./src/pages/*"],
      "@SC/router/*": ["./src/router/*"],
      "@SC/ui/*": ["./src/ui/*"],
      "@SC/components/*": ["./src/components/*"],
      "@SC/services/*": ["./src/services/*"],
      "@SC/form/*": ["./src/form/*"],
      "@SC/utils/*": ["./src/shared/utils/*"],
      "@SC/types/*": ["./src/shared/types/*"],
      "@SC/locales/*": ["./locales/*"],
      "@SC/firebase/*": ["./services/firebase/*"],
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
